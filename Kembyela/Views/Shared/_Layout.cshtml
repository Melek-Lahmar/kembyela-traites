<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kembyela | Lettres de Change</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Layout CSS -->
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark kem-navbar">
        <div class="container">
            <a class="navbar-brand kem-brand" asp-controller="Traite" asp-action="Create">
                <i class="fas fa-file-contract"></i> Kembyela.tn
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link kem-nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")"
                           asp-controller="Traite" asp-action="Create">
                            <i class="fas fa-plus-circle me-2"></i>Nouvelle Lettre
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link kem-nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                           asp-controller="Traite" asp-action="Index">
                            <i class="fas fa-list me-2"></i>Toutes les Lettres
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link kem-nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Stats" ? "active" : "")"
                           asp-controller="Traite" asp-action="Stats">
                            <i class="fas fa-chart-bar me-2"></i>Statistiques
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link kem-nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Print" ? "active" : "")"
                           href="#" id="printButton" style="display: none;">
                            <i class="fas fa-print me-2"></i>Imprimer
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Breadcrumb (optionnel) -->
    @if (ViewData["ShowBreadcrumb"] != null && (bool)ViewData["ShowBreadcrumb"])
    {
        <div class="kem-breadcrumb-nav">
            <div class="container">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb kem-breadcrumb">
                        <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i> Accueil</a></li>
                        @if (ViewData["Breadcrumb"] != null)
                        {
                            foreach (var item in (List<string>)ViewData["Breadcrumb"])
                            {
                                <li class="breadcrumb-item active">@item</li>
                            }
                        }
                    </ol>
                </nav>
            </div>
        </div>
    }

    <!-- Main Content -->
    <main role="main" class="pb-3 kem-fade-in">
        <!-- Alertes globales -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show kem-alert" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-danger alert-dismissible fade show kem-alert" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @if (TempData["WarningMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-warning alert-dismissible fade show kem-alert" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["WarningMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer kem-footer">
        <div class="container text-center py-3">
            <div class="row align-items-center">
                <div class="col-md-4 text-md-start">
                    <p class="mb-0 kem-footer-text">
                        <i class="fas fa-copyright me-1"></i> @DateTime.Now.Year - Kembyela.tn
                    </p>
                </div>
                <div class="col-md-4">
                    <p class="mb-0 kem-footer-text">
                        <i class="fas fa-file-contract me-1"></i> Gestion des Lettres de Change
                    </p>
                </div>
                <div class="col-md-4 text-md-end">
                    <i class="fas fa-cantact me-1"></i>
                    <!-- Contacts avec icônes LinkedIn et Gmail -->
                    <a href="https://www.linkedin.com/in/melek-lahmar-2451962b6"
                       target="_blank"
                       class="text-decoration-none me-3 kem-social-link"
                       title="Melek Lahmar sur LinkedIn">
                        <i class="fab fa-linkedin fa-lg"></i>
                    </a>
                    <a href="mailto:lahmarmelek67@gmail.com"
                       class="text-decoration-none kem-social-link"
                       title="Envoyer un email">
                        <i class="fas fa-envelope fa-lg"></i>
                    </a>
                   
            
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Scripts globaux pour le layout
        $(document).ready(function() {
            // Activer le menu actif
            $('.kem-nav-link').each(function() {
                if ($(this).attr('href') === window.location.pathname) {
                    $(this).addClass('active');
                }
            });

            // Afficher/masquer le bouton d'impression
            if (window.location.pathname.includes('/Print')) {
                $('#printButton').show();
                $('#printButton').attr('href', 'javascript:window.print()');
            }

            // Animation de chargement
            $('.kem-fade-in').css('opacity', '0').animate({ opacity: 1 }, 500);

            // Tooltips Bootstrap
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Popovers Bootstrap
            var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
            var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
                return new bootstrap.Popover(popoverTriggerEl);
            });
        });

        // Fonction pour afficher une notification toast
        function showToast(type, message) {
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type} border-0 position-fixed`;
            toast.style.cssText = 'top: 20px; right: 20px; z-index: 1050;';
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="fas fa-${type === 'success' ? 'check' : 'exclamation'}-circle me-2"></i>
                        ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            document.body.appendChild(toast);

            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();

            toast.addEventListener('hidden.bs.toast', function () {
                document.body.removeChild(toast);
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>