@model Kembyela.Models.Traite

@{
    ViewData["Title"] = "Supprimer Lettre de Change";
}

<div class="container mt-4">
    <h1 class="text-center mb-4 text-danger"><i class="fas fa-exclamation-triangle"></i> Supprimer Lettre de Change</h1>

    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Confirmation de suppression</h5>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Êtes-vous sûr de vouloir supprimer cette lettre de change ?</h4>
            <p class="text-muted">Cette action est irréversible. Toutes les données de cette lettre de change seront perdues.</p>

            <hr>

            <h5>Détails de la lettre de change :</h5>
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">ID :</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Date création :</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Date échéance :</dt>
                        <dd class="col-sm-8">@Model.DateEcheance.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Ville :</dt>
                        <dd class="col-sm-8">@Model.Ville</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Bénéficiaire :</dt>
                        <dd class="col-sm-8">@Model.OrdreDe</dd>

                        <dt class="col-sm-4">Payeur :</dt>
                        <dd class="col-sm-8">@Model.Payer</dd>

                        <dt class="col-sm-4">Montant :</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.GetMontantFormatted()</strong>
                        </dd>

                        <dt class="col-sm-4">Banque :</dt>
                        <dd class="col-sm-8">@Model.Banque</dd>
                    </dl>
                </div>
            </div>

            <div class="alert alert-info mt-3">
                <h6><i class="fas fa-info-circle"></i> Montant en lettres :</h6>
                <p class="mb-0">@Model.MontantEnLettres</p>
            </div>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg px-5">
                    <i class="fas fa-trash"></i> Oui, supprimer définitivement
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg px-5 ms-2">
                    <i class="fas fa-times"></i> Annuler
                </a>
            </form>
        </div>
    </div>
</div>