                            <div class="display-6 fw-bold mb-1">@enAttente</div>
                            <div class="text-warning small">
                                <i class="fas fa-clock me-1"></i>@montantAttente.ToString("N3") DT
                            </div>
                        </div>
                        <div class="kem-kpi-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                </div>
                <div class="kem-kpi-footer">
                    <span class="text-muted small">Taux : <strong>@pctAttente.ToString("N1")%</strong></span>
                </div>
            </div>
        </div>
    </div>

    <!-- KPI SECONDAIRES -->
    <div class="row g-4 mb-4">
        <div class="col-xl-4 col-lg-6">
            <div class="card border-0 shadow-sm h-100 kem-card kem-mini-card">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <div class="text-muted small">Montant moyen</div>
                            <div class="h4 fw-bold mb-0">@montantMoyen.ToString("N3") DT</div>
                            <div class="text-muted small mt-2">
                                <i class="fas fa-calculator me-1"></i>sur l’ensemble des lettres
                            </div>
                        </div>
                        <span class="badge kem-badge-soft">Moyenne</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-6">
            <div class="card border-0 shadow-sm h-100 kem-card kem-mini-card">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <div class="text-muted small">Montant moyen payé</div>
                            <div class="h4 fw-bold mb-0 text-success">@montantMoyenPaye.ToString("N3") DT</div>
                            <div class="text-muted small mt-2">
                                <i class="fas fa-check-circle me-1"></i>lettres payées uniquement
                            </div>
                        </div>
                        <span class="badge kem-badge-soft-success">Payé</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-12">
            <div class="card border-0 shadow-sm h-100 kem-card kem-mini-card">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <div class="text-muted small">Montant moyen en retard</div>
                            <div class="h4 fw-bold mb-0 text-danger">@montantMoyenRetard.ToString("N3") DT</div>
                            <div class="text-muted small mt-2">
                                <i class="fas fa-exclamation-triangle me-1"></i>lettres en retard uniquement
                            </div>
                        </div>
                        <span class="badge kem-badge-soft-danger">Retard</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- BANQUES -->
    <div class="card border-0 shadow-sm mb-4 kem-card">
        <div class="card-header kem-card-header">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <i class="fas fa-university me-2 text-primary"></i>
                    <h5 class="mb-0">Statistiques par Banque (avec adresse)</h5>
                </div>
                <span class="text-muted small">
                    <i class="fas fa-filter me-1"></i>Top 8 par montant
                </span>
            </div>
        </div>

        <div class="card-body p-0">
            @if (topBanques == null || topBanques.Count == 0)
            {
                <div class="p-4">
                    <div class="alert alert-light border mb-0 kem-empty-state">
                        <i class="fas fa-info-circle me-2 text-primary"></i>
                        Aucune banque trouvée dans les données.
                    </div>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0 kem-data-table">
                        <thead class="table-light">
                            <tr>
                                <th class="py-3">Banque</th>
                                <th class="py-3">Adresse(s)</th>
                                <th class="py-3 text-center">Nombre</th>
                                <th class="py-3 text-end pe-4">Montant total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var b in topBanques)
                            {
                                <tr>
                                    <td class="fw-bold">
                                        <span class="kem-pill">
                                            <i class="fas fa-building me-2"></i>@b.Banque
                                        </span>
                                    </td>
                                    <td>
                                        @if (b.Adresses != null && b.Adresses.Count > 0)
                                        {
                                            <ul class="mb-0 ps-3 kem-address-list">
                                                @foreach (var a in b.Adresses.Take(2))
                                                {
                                                    <li>@a</li>
                                                }
                                                @if (b.Adresses.Count > 2)
                                                {
                                                    <li class="text-muted">+ @(b.Adresses.Count - 2) autre(s)</li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@b.Count</span>
                                    </td>
                                    <td class="text-end pe-4 fw-bold text-success">
                                        @b.Montant.ToString("N3") DT
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="p-3 border-top text-muted small">
                    <i class="fas fa-info-circle me-1"></i>
                    Les adresses affichées proviennent du champ <strong>AdresseBanque</strong>.
                </div>
            }
        </div>
    </div>

    <!-- INDICATEURS FINANCIERS -->
    <div class="card border-0 shadow-sm mb-4 kem-card">
        <div class="card-header kem-card-header">
            <div class="d-flex align-items-center">
                <i class="fas fa-money-bill-wave me-2 text-primary"></i>
                <h5 class="mb-0">Indicateurs Financiers</h5>
            </div>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush kem-kpi-list">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>💰 Montant total émis</span>
                    <strong>@montantTotal.ToString("N3") DT</strong>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center text-success">
                    <span>✅ Montant encaissé</span>
                    <strong>@montantPaye.ToString("N3") DT</strong>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center text-danger">
                    <span>⚠️ Montant en retard</span>
                    <strong>@montantRetard.ToString("N3") DT</strong>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center text-warning">
                    <span>⏳ Montant restant</span>
                    <strong>@montantAttente.ToString("N3") DT</strong>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>📊 Montant moyen par lettre</span>
                    <strong>@montantMoyen.ToString("N3") DT</strong>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center text-success">
                    <span>📈 Montant moyen payé</span>
                    <strong>@montantMoyenPaye.ToString("N3") DT</strong>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center text-danger">
                    <span>📉 Montant moyen retard</span>
                    <strong>@montantMoyenRetard.ToString("N3") DT</strong>
                </li>
            </ul>
        </div>
    </div>

    <!-- TOP 5 BÉNÉFICIAIRES -->
    <div class="card border-0 shadow-sm mb-4 kem-card">
        <div class="card-header kem-card-header">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <i class="fas fa-user-tie me-2 text-primary"></i>
                    <h5 class="mb-0">Top 5 Bénéficiaires</h5>
                </div>
                <span class="text-muted small"><i class="fas fa-trophy me-1"></i>Par montant</span>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 kem-data-table">
                <thead class="table-light">
                    <tr>
                        <th class="py-3">Bénéficiaire</th>
                        <th class="py-3 text-center">Nombre</th>
                        <th class="py-3 text-end pe-4">Montant total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var g in Model.GroupBy(t => t.OrdreDe).OrderByDescending(g => g.Sum(x => x.Montant)).Take(5))
                    {
                        <tr>
                            <td class="fw-bold text-primary">@g.Key</td>
                            <td class="text-center">@g.Count()</td>
                            <td class="text-end pe-4 fw-bold text-success">@g.Sum(x => x.Montant).ToString("N3") DT</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- LETTRES EN RETARD -->
    <div class="card border-0 shadow-sm mb-4 kem-card">
        <div class="card-header kem-card-header">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-triangle me-2 text-danger"></i>
                    <h5 class="mb-0">Lettres en Retard</h5>
                </div>
                <span class="badge bg-danger">@enRetard</span>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 kem-data-table">
                <thead class="table-light">
                    <tr>
                        <th class="py-3">Bénéficiaire</th>
                        <th class="py-3">Échéance</th>
                        <th class="py-3 text-center">Jours retard</th>
                        <th class="py-3 text-end pe-4">Montant</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.Where(t => !t.EstPayee && EstEnRetard(t.DateEcheance)))
                    {
                        <tr class="kem-row-late">
                            <td>@t.OrdreDe</td>
                            <td>@t.DateEcheance.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">@((DateTime.Now.Date - t.DateEcheance.Date).Days) j</td>
                            <td class="text-end pe-4 fw-bold text-danger">@t.Montant.ToString("N3") DT</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- PAR MOIS -->
    <div class="card border-0 shadow-sm mb-4 kem-card">
        <div class="card-header kem-card-header">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <i class="fas fa-calendar-alt me-2 text-primary"></i>
                    <h5 class="mb-0">Lettres par Mois</h5>
                </div>
                <span class="text-muted small"><i class="fas fa-calendar me-1"></i>Échéances</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 kem-data-table">
                    <thead class="table-light">
                        <tr>
                            <th class="py-3">Mois</th>
                            <th class="py-3 text-center">Nombre</th>
                            <th class="py-3 text-end pe-4">Montant total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var l in lettresParMois)
                        {
                            <tr>
                                <td>@l.Mois.Month/@l.Mois.Year</td>
                                <td class="text-center">@l.Count</td>
                                <td class="text-end pe-4 fw-bold">@l.Montant.ToString("N3") DT</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- BOUTON RETOUR (bas) -->
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-primary kem-btn px-4">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>

</div>

