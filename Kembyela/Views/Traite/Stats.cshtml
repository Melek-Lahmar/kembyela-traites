                        <div>
                            <div class="text-muted small">En retard</div>
                            <div class="display-6 fw-bold mb-1">@enRetard</div>
                            <div class="text-danger small">
                                <i class="fas fa-exclamation-triangle me-1"></i>@montantRetard.ToString("N3") DT
                            </div>
                        </div>
                        <div class="kem-kpi-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                    </div>
                </div>
                <div class="kem-kpi-footer">
                    <span class="text-muted small">Taux : <strong>@pctRetard.ToString("N1")%</strong></span>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6">
            <div class="card border-0 shadow-sm h-100 kem-card kem-kpi kem-kpi-pending">
                <div class="card-body p-4">
